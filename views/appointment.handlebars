
  <div class="container">
    <div class="row">
      <div class="col-lg-12">

        <!-- Current Available Appointments -->
        <div class="card">
          <div class="card-header">
            <h4>Schedule Your Appointment Below</h4>
          </div>
          <div class="card-body">
            <ul id="apptList" class="list-group"></ul>
            <div class="card-body">
              <form action="#" method="GET">
                <p>
                  <!-- Date -->
                  <label for="date-form">Pick a Date</label>
                  <input id="date-form" class='datepicker' size='11' title='DD-MM-YYYY' />
                  <!-- Time -->
                  <label for="time-form">Pick a Time</label>
                  <input id="time-form" type="text" name="time-form" value="" aria-live="assertive" autocomplete="off" aria-label="Use up or down arrow keys to change time" required>
                  </p>
              </form>
            <div class="uk-margin">
            <label class="uk-form-label" id="apptReason" for="apptReason">What is your appointment for?</label>
            <div uk-form-custom="target: > * > span:first-child">
              <select>
                <option value="">Please select...</option>
                <option value="Eye Exam">Eye Exam</option>
                <option value="Physical">Physical</option>
                <option value="Blood test">Blood Test</option>
              </select>
              <button class="uk-button uk-button-default" type="button" tabindex="-1">
                <span></span>
                <span uk-icon="icon: chevron-down"></span>
              </button>
            </div>
          </div>              
          <div class="uk-width-1-2@s">
          <label class="uk-form-label" for="form-horizontal-select">Name:</label>
          <input class="uk-input" type="text" id="nameInput" placeholder="John Smith">
          </div>
          <div class="uk-width-1-2@s">
          <label class="uk-form-label" for="form-horizontal-select">Phone:</label>
          <input class="uk-input" type="text" id="phoneInput" placeholder="999-999-9999">
          </div>
          <div class="uk-width-1-2@s">
          <label class="uk-form-label" for="form-horizontal-select">Email:</label>
          <input class="uk-input" type="text" id="emailInput" placeholder="Email">
          </div>
          <br>
          <button class="btn btn-primary" id="submitBtn">Submit</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="styles/demo.css">
<link rel="stylesheet" href="styles/appointment.css">
<script src="/js/appointment.js"></script>
<script src="/js/time.js"></script>
<script src="/js/date.js"></script>