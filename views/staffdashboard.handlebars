<!-- Med Record -->
<div id="medRec" uk-modal>
  <div class="uk-modal-dialog">

    <button class="uk-modal-close-default" type="button" uk-close></button>

    <div class="uk-modal-header">
      <h2 class="uk-modal-title">Medical Record</h2>
    </div>

    <div class="uk-modal-body">
      <div class="ui items">
        <div class="item">
          <div class="ui tiny image">
            <img class="uk-border-circle" width="40" height="40" src="{{patient.image}}">
          </div>
          <div class="content">
            <a class="header">{{patient.first_name}} {{patient.last_name}}</a>
            <ul class="uk-list">
              <li>{{patient.street_address}}</li>
              <li>{{patient.city}}, {{patient.state}}, {{patient.zip}}</li>
              <li>{{patient.phone_number}}</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="row">
        <table class="uk-table uk-table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Procedure</th>
              <th>Reason for Procedure</th>
              <th>Provider</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>February 22, 2019</td>
              <td>Eye lasik</td>
              <td>Vision status</td>
              <td>Kaiser Permanente</td>
            </tr>
            <tr>
              <td>January 12, 2019</td>
              <td>X-Ray</td>
              <td>Pain in the right hand</td>
              <td>Kaiser Permanente</td>
            </tr>
            <tr>
              <td>May 15, 2018</td>
              <td>Biopsy</td>
              <td>Cyst found</td>
              <td>Kaiser Permanente</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row">
        <table class="uk-table uk-table-striped">
          <thead>
            <tr>
              <th>Tests taken</th>
              <th>Status</th>
              <th>Results</th>
            </tr>
          </thead>
          <tbody>
            <tr class="warning">
              <td>Blood test</td>
              <td>Pending</td>
              <td>Unknown</td>
            </tr>
            <tr>
              <td>Health test</td>
              <td>Complete</td>
              <td>Within Range</td>
            </tr>
            <tr>
              <td>C-Reactive Protein</td>
              <td>Complete</td>
              <td>Negative</td>
            </tr>
            <tr>
              <td>Hemoglobin A1C</td>
              <td>Scheduled</td>
              <td>Unknown</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- row -->
      <div class="row">
        <table class="uk-table uk-table-striped">
          <thead>
            <tr>
              <th>Allergy</th>
              <th>Severity</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Lactose</td>
              <td>High</td>
              <td>None</td>
            </tr>
            <tr>
              <td>Penicillin</td>
              <td>High</td>
              <td>None</td>
            </tr>
            <tr>
              <td>Pet Dander</td>
              <td>Low</td>
              <td>Has pets</td>
            </tr>
            <tr>
              <td>Peanuts</td>
              <td>Moderate</td>
              <td>None</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

